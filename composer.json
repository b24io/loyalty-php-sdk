{
  "name": "b24io/loyalty-php-sdk",
  "description": "B24io.Loyalty: PHP-SDK for bonus cards and loyalty program for Bitrix24",
  "keywords": [
    "loyalty program",
    "bonus cards",
    "loyalty program SDK",
    "b24io",
    "REST-API",
    "Bitrix24"
  ],
  "homepage": "https://www.bitrix24.ru/apps/?app=b24io.loyalty",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "B24io Team",
      "email": "app@b24.io",
      "homepage": "https://b24.io"
    }
  ],
  "require": {
    "php": "7.4.* || 8.2.* || 8.3.*",
    "ext-json": "*",
    "ext-bcmath": "*",
    "ext-curl": "*",
    "ext-intl": "*",
    "psr/log": "^1.1.4 || ^2.0 || ^3.0",
    "fig/http-message-util": "1.1.*",
    "symfony/console": "^5.4 || 7.*",
    "symfony/dotenv": "^5.4 || 7.*",
    "symfony/http-client": "^5.4 || 7.*",
    "symfony/http-client-contracts": "^2.4 ||^3.1",
    "symfony/http-foundation": "^5.4 || 7.*",
    "symfony/uid": "^5.4 || 7.*",
    "symfony/filesystem": "^5.4 || 7.*",
    "moneyphp/money": "^3.3 || 4.*",
    "giggsey/libphonenumber-for-php": "8.1.*",
    "league/csv": "^9.0",
    "mesilov/moneyphp-percentage": "0.1.0 || 0.2.0"
  },
  "require-dev": {
    "rector/rector": "*",
    "monolog/monolog": "^2.5 || ^3.0",
    "symfony/debug-bundle": "^5.4 || 7.*",
    "phpstan/phpstan": "1.*",
    "phpunit/phpunit": "*",
    "symfony/stopwatch": "^5.4 || 7.*",
    "roave/security-advisories": "dev-master",
    "nunomaduro/phpinsights": "2.*",
    "fakerphp/faker": "1.23.*"
  },
  "autoload": {
    "psr-4": {
      "B24io\\Loyalty\\SDK\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "B24io\\Loyalty\\SDK\\Tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
