{
  "name": "b24io/loyalty-php-sdk",
  "description": "B24io.Loyalty: PHP-SDK for bonus cards and loyalty program for Bitrix24",
  "keywords": [
    "loyalty program",
    "bonus cards",
    "loyalty program SDK",
    "b24io",
    "REST-API",
    "Bitrix24"
  ],
  "homepage": "https://www.bitrix24.ru/apps/?app=b24io.loyalty",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "B24io Team",
      "email": "app@b24.io",
      "homepage": "https://b24.io"
    }
  ],
  "require": {
    "php": "8.2.*",
    "ext-json": "*",
    "ext-bcmath": "*",
    "ext-curl": "*",
    "ext-intl": "*",
    "psr/log": "^1.1.4 || ^2.0 || ^3.0",
    "fig/http-message-util": "1.1.*",
    "symfony/http-client": "7.*",
    "symfony/http-client-contracts": "^3.1",
    "symfony/http-foundation": "7.*",
    "symfony/uid": "7.*",
    "symfony/filesystem": "7.*",
    "moneyphp/money": "4.*",
    "giggsey/libphonenumber-for-php": "8.1.*",
    "league/csv": "^9.0"
  },
  "require-dev": {
    "monolog/monolog": "2.1.*",
    "symfony/console": "7.*",
    "symfony/dotenv": "6.*",
    "symfony/debug-bundle": "7.*",
    "phpstan/phpstan": "1.*",
    "phpunit/phpunit": "9.6.*",
    "symfony/stopwatch": "7.*",
    "roave/security-advisories": "dev-master"
  },
  "autoload": {
    "psr-4": {
      "B24io\\Loyalty\\SDK\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "B24io\\Loyalty\\SDK\\Tests\\": "tests/"
    }
  }
}