{
  "name": "b24io/loyalty-php-sdk",
  "description": "B24io.Loyalty: PHP-SDK for bonus cards and loyalty program for Bitrix24",
  "keywords": [
    "loyalty program",
    "bonus cards",
    "loyalty program SDK",
    "b24io",
    "REST-API",
    "Bitrix24"
  ],
  "homepage": "https://www.bitrix24.ru/apps/?app=b24io.loyalty",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "B24io Team",
      "email": "app@b24.io",
      "homepage": "https://b24.io"
    }
  ],
  "require": {
    "php": "7.4.*|8.*",
    "ext-json": "*",
    "ext-curl": "*",
    "psr/log": "^1.0",
    "monolog/monolog": "1.*",
    "guzzlehttp/guzzle": "6.5",
    "moneyphp/money": "^3.3",
    "fig/http-message-util": "1.*",
    "eloquent/enumeration": "^5.1",
    "crell/api-problem": "^3.0",
    "giggsey/libphonenumber-for-php": "^8.12",
    "ramsey/uuid": "4.*",
    "symfony/http-foundation": "5.4.*"
  },
  "require-dev": {
    "phpunit/phpunit": "9.*"
  },
  "autoload": {
    "psr-4": {
      "B24io\\Loyalty\\SDK\\": "src/"
    }
  },
  "scripts": {
    "unit-tests": [
      "phpunit  --testsuite unit-tests --colors=always --verbose"
    ],
    "integration-tests": [
      "phpunit  --testsuite integration-tests --colors=always --verbose"
    ]
  }
}